<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
         <property name="brokerURL" ref="brokerURL"/> 
    </bean>

    <!-- this is the Message Driven POJO (MDP) -->
    <bean id="messageListener" class="gov.usgs.cida.pubs.jms.MessageConsumer" autowire="byName"/>

    <!-- and this is the message listener container -->
    <bean id="mlc" class="org.springframework.jms.listener.DefaultMessageListenerContainer" autowire="byName">
        <property name="concurrentConsumers" value="1"/>
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="destinationName" ref="queueName"/>
        <property name="messageListener" ref="messageListener"/>
    </bean>

    <bean id="ipdsStringMessageService" class="gov.usgs.cida.pubs.busservice.ipds.IpdsStringMessageService" autowire="byName"/>
    <bean id="spnProductionMessageService" class="gov.usgs.cida.pubs.busservice.ipds.SpnProductionMessageService" autowire="byName"/>

    <bean id="ipdsMessageLog" class="gov.usgs.cida.pubs.domain.ipds.IpdsMessageLog" autowire="byName"/>

    <bean id="ipdsProcessLog" class="gov.usgs.cida.pubs.domain.ipds.IpdsProcessLog" autowire="byName"/>

    <bean id="credentials" class="org.apache.http.auth.NTCredentials" autowire="byName">
        <constructor-arg ref="ipdsPubsWsUser"/>
        <constructor-arg ref="ipdsPubsWsPwd"/>
        <constructor-arg value=""/>
        <constructor-arg value="GS"/>
    </bean>

    <bean id="httpClient" class="org.apache.http.impl.client.DefaultHttpClient" autowire="byName"/>

    <bean id="ipdsWsRequester" class="gov.usgs.cida.pubs.busservice.ipds.IpdsWsRequester" autowire="byName"/>

    <bean id="ipdsProcess" class="gov.usgs.cida.pubs.busservice.ipds.IpdsProcess" autowire="byName">
        <property name="pubTypeMap">
            <map>
                <entry key="Atlas" value="4"/>
                <entry key="Book chapter, encyclopedia entry, or parts" value="61"/>
                <entry key="Book, textbook, handbook, or guidebook" value="60"/>
                <entry key="Book, textbook, handbook, guidebook, encyclopedia entry, or parts" value="60"/>
                <entry key="Book review, technical comments and replies" value="36"/>
                <entry key="Cooperator publication" value="120"/>
                <entry key="Extended Abstract" value="3"/>
                <entry key="Journal or periodical article" value="62"/>
                <entry key="Map" value="24"/>
                <entry key="Symposium, proceedings, conference publication" value="10"/>
                <entry key="USGS series" value="1"/>
                <entry key="USGS periodical" value="2"/>
                <entry key="USGS Web page, system, or service" value="47"/>
            </map>
        </property>
    </bean>

</beans>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
         <property name="brokerURL" ref="brokerURL"/> 
    </bean>

    <bean id="ipdsMessageListener" class="gov.usgs.cida.pubs.jms.IpdsMessageListener" autowire="byName"/>
    <bean id="mlc" class="org.springframework.jms.listener.DefaultMessageListenerContainer" autowire="byName">
        <property name="concurrentConsumers" value="1"/>
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="destinationName" ref="queueName"/>
        <property name="messageListener" ref="ipdsMessageListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>

    <bean id="costCenterListener" class="gov.usgs.cida.pubs.jms.CostCenterMessageListener" autowire="byName"/>
    <bean id="ccmlc" class="org.springframework.jms.listener.DefaultMessageListenerContainer" autowire="byName">
        <property name="concurrentConsumers" value="1"/>
        <property name="maxConcurrentConsumers" value="1"/>
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="destinationName" ref="costCenterQueueName"/>
        <property name="messageListener" ref="costCenterListener"/>
        <property name="recoveryInterval" value="50000"/>
        <property name="sessionTransacted" value="true"/>
    </bean>

    <bean id="httpClient" class="org.apache.http.impl.client.DefaultHttpClient" autowire="byName"/>

    <bean id="credentials" class="org.apache.http.auth.NTCredentials" autowire="byName">
        <constructor-arg ref="ipdsPubsWsUser"/>
        <constructor-arg ref="ipdsPubsWsPwd"/>
        <constructor-arg value=""/>
        <constructor-arg value="GS"/>
    </bean>

</beans>
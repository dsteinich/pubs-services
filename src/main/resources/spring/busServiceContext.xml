<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="mpPublicationBusService" class="gov.usgs.cida.pubs.busservice.mp.MpPublicationBusService" autowire="byName"/>
    <bean id="mpPublicationContributorBusService" class="gov.usgs.cida.pubs.busservice.mp.MpPublicationContributorBusService" autowire="byName"/>
    <bean id="mpPublicationCostCenterBusService" class="gov.usgs.cida.pubs.busservice.mp.MpPublicationCostCenterBusService" autowire="byName"/>
    <bean id="mpPublicationLinkBusService" class="gov.usgs.cida.pubs.busservice.mp.MpPublicationLinkBusService" autowire="byName"/>

    <bean id="personContributorBusService" class="gov.usgs.cida.pubs.busservice.PersonContributorBusService" autowire="byName"/>

    <bean id="ipdsBinding" class="gov.usgs.cida.pubs.busservice.ipds.IpdsBinding" autowire="byName"/>
    <bean id="ipdsProcess" class="gov.usgs.cida.pubs.busservice.ipds.IpdsProcess" autowire="byName"/>
    <bean id="ipdsStringMessageService" class="gov.usgs.cida.pubs.busservice.ipds.IpdsStringMessageService" autowire="byName"/>
    <bean id="ipdsWsRequester" class="gov.usgs.cida.pubs.busservice.ipds.IpdsWsRequester" autowire="byName"/>
    <bean id="spnProductionMessageService" class="gov.usgs.cida.pubs.busservice.ipds.SpnProductionMessageService" autowire="byName"/>

    <bean id="numberedSeriesXml" class="java.lang.String" autowire="byName">
        <constructor-arg>
            <bean class="org.springframework.util.FileCopyUtils" factory-method="copyToByteArray">
                <constructor-arg value="classpath:templates/crossref.4.3.3/numberedSeries.xml" type="java.io.InputStream" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="unNumberedSeriesXml" class="java.lang.String" autowire="byName">
        <constructor-arg>
            <bean class="org.springframework.util.FileCopyUtils" factory-method="copyToByteArray">
                <constructor-arg value="classpath:templates/crossref.4.3.3/unNumberedSeries.xml" type="java.io.InputStream" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="organizationNameXml" class="java.lang.String" autowire="byName">
        <constructor-arg>
            <bean class="org.springframework.util.FileCopyUtils" factory-method="copyToByteArray">
                <constructor-arg value="classpath:templates/crossref.4.3.3/organizationName.xml" type="java.io.InputStream" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="personNameXml" class="java.lang.String" autowire="byName">
        <constructor-arg>
            <bean class="org.springframework.util.FileCopyUtils" factory-method="copyToByteArray">
                <constructor-arg value="classpath:templates/crossref.4.3.3/personName.xml" type="java.io.InputStream" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="pagesXml" class="java.lang.String" autowire="byName">
        <constructor-arg>
            <bean class="org.springframework.util.FileCopyUtils" factory-method="copyToByteArray">
                <constructor-arg value="classpath:templates/crossref.4.3.3/pages.xml" type="java.io.InputStream" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="crossRefBusService" class="gov.usgs.cida.pubs.busservice.CrossRefBusService" autowire="byName"/>

</beans>
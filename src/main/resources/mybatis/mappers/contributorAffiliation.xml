<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="contributorAffiliation">

    <resultMap id="result" type="ContributorAffiliation" extends="base.result">
        <id property="id" column="contributor_affiliation_id"/>
        <result property="contributorId" column="contributor_id"/>
        <association property="affiliation" column="affiliation_id" select="affiliation.getById"/>
    </resultMap>

    <sql id="cols">
        contributor_affiliation_id, contributor_id, affiliation_id,
        <include refid="base.auditCols"/>
    </sql>

    <sql id="hosts">
        #{id,jdbcType=NUMERIC},
        #{contributorId,jdbcType=NUMERIC},
        #{affiliation.id,jdbcType=NUMERIC},
        <include refid="base.auditHosts"/>
    </sql>

    <sql id="sets">
        contributor_id = #{contributorId,jdbcType=NUMERIC},
        affiliation_id = #{affiliation.id,jdbcType=NUMERIC},
        <include refid="base.auditSets"/>
    </sql>

    <sql id="filters">
        <where>
            <if test="id != null">
                and contributor_affiliation_id = #{id}
            </if>
            <if test="contributorId != null">
                and contributor_id = #{contributorId}
            </if>
            <if test="affiliationId != null">
                and affiliation_id = #{affiliationId}
            </if>
        </where>
    </sql>
</mapper>

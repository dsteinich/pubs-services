<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="pwPublicationCostCenter">

    <sql id="baseSelect">
        select <include refid="publicationCostCenter.cols"/>
          from publication_cost_center
               join affiliation
                 on publication_cost_center.cost_center_id = affiliation.affiliation_id
    </sql>

    <select id="getById" parameterType="Integer" resultMap="publicationCostCenter.result">
        <include refid="baseSelect"/>
         where publication_cost_center_id = #{value,jdbcType=NUMERIC}
    </select>

    <select id="getByPublication" parameterType="Integer" resultMap="publicationCostCenter.result">
        <include refid="baseSelect"/>
         where publication_id = #{value,jdbcType=NUMERIC}
    </select>

    <select id="getByMap" resultMap="publicationCostCenter.result">
        <include refid="baseSelect"/>
        <include refid="publicationCostCenter.filters"/>
    </select>

</mapper>

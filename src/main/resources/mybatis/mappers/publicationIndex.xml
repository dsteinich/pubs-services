<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="publicationIndex">

    <resultMap id="result" type="PublicationIndex" extends="base.result">
        <id property="id" column="publication_id"/>
        <result property="q" column="q"/>
    </resultMap>

    <sql id="cols">
        publication_id, q
    </sql>

	<select id="getById" parameterType="Integer" resultMap="result">
		select <include refid="cols"/>
          from publication_index
         where publication_id = #{value,jdbcType=NUMERIC}
	</select>

    <update id="update">
        merge into publication_index dest
            using (select <include refid="cols"/>
                     from publication_index_view
                    where publication_id = #{value,jdbcType=NUMERIC}) src
               on (dest.publication_id = src.publication_id)
             when matched then update set dest.q = src.q
             when not matched then insert (<include refid="cols"/>)
                                   values (src.publication_id, src.q)
    </update>

</mapper>

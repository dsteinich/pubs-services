<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="mpPublicationContributor">

    <resultMap id="result" type="MpPublicationContributor" extends="publicationContributor.result">
    </resultMap>

    <insert id="add" parameterType="MpPublicationContributor">
        <selectKey keyProperty="id" resultType="Integer" order="BEFORE">
            select publication_contributor_seq.nextval id from dual
        </selectKey>
        insert into mp_pub_contributor (<include refid="publicationContributor.cols"/>)
             values (<include refid="publicationContributor.hosts"/>)
    </insert>

    <insert id="copyMpFromPw" parameterType="Integer">
        insert into mp_pub_contributor (<include refid="publicationContributor.cols"/>)
            (select <include refid="publicationContributor.cols"/>
               from publication_contributor
              where publication_id = #{value,jdbcType=NUMERIC})
    </insert>

    <sql id="baseSelect">
        select <include refid="publicationContributor.cols"/>
          from mp_pub_contributor
    </sql>

    <select id="getById" parameterType="Integer" resultMap="result">
        <include refid="baseSelect"/>
         where publication_contributor_id = #{value,jdbcType=NUMERIC}
    </select>

    <select id="getByMap" resultMap="result">
        <include refid="baseSelect"/>
        <include refid="publicationContributor.filters"/>
    </select>

    <select id="getAuthorsByPublication" parameterType="Integer" resultMap="result">
        <include refid="baseSelect"/>
        <include refid="publicationContributor.authorsWhere"/>
            order by rank
    </select>

    <select id="getEditorsByPublication" parameterType="Integer" resultMap="result">
        <include refid="baseSelect"/>
        <include refid="publicationContributor.editorsWhere"/>
            order by rank
    </select>

    <update id="update" parameterType="MpPublicationContributor">
        update mp_pub_contributor
           set <include refid="publicationContributor.sets"/>
           where publication_contributor_id = #{id,jdbcType=NUMERIC}
    </update>

	<update id="publish" parameterType="Integer">
		merge into publication_contributor pw 
			using (<include refid="baseSelect"/>
			         where publication_id = #{value,jdbcType=NUMERIC}) mp 
			   on (mp.publication_contributor_id = pw.publication_contributor_id) 
			 when matched then update 
				  set pw.contributor_id = mp.contributor_id, 
					  pw.contributor_type_id = mp.contributor_type_id,
					  pw.rank = mp.rank,
					  pw.insert_date = mp.insert_date,
					  pw.insert_username = mp.insert_username,
					  pw.update_date = sysdate,
					  pw.update_username = audit_trail_util.get_username
			 when not matched then insert (<include refid="publicationContributor.cols"/>)
				  values (mp.publication_contributor_id, 	mp.publication_id, 		mp.contributor_id,
				          mp.contributor_type_id,			mp.rank,
				          mp.insert_date, 					mp.insert_username, 	sysdate, 			audit_trail_util.get_username)
 
	</update>
	
	<delete id="publishDelete" parameterType="Integer">
		delete from publication_contributor
		 where publication_id = #{value,jdbcType=NUMERIC} and
		       publication_contributor_id not in (select publication_contributor_id
		                                            from mp_pub_contributor
		                                           where publication_id = #{value,jdbcType=NUMERIC}) 
	</delete>

    <delete id="delete" parameterType="Integer">
        delete from mp_pub_contributor
         where publication_contributor_id = #{value,jdbcType=NUMERIC}
    </delete>

    <delete id="deleteByParent" parameterType="Integer">
        delete from mp_pub_contributor
         where publication_id = #{value,jdbcType=NUMERIC}
    </delete>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="costCenter">

    <resultMap id="result" type="CostCenter" extends="affiliation.result">
        <result property="ipdsId" column="affiliation_ipds_id"/>
    </resultMap>

    <sql id="cols">
        <include refid="affiliation.cols"/>,
        affiliation_ipds_id
    </sql>

    <sql id="filters">
        <!-- The base select has a hard coded where clause, so no where tag here. -->
        <include refid="affiliation.filters"/>
        <if test="ipdsId != null">
            and affiliation_ipds_id = #{ipdsId}
        </if>
    </sql>

    <sql id="baseSelect">
        select <include refid="cols"/>
          from affiliation
         where is_cost_center = 'Y'
    </sql>

    <select id="getById" parameterType="Integer" resultMap="result">
        <include refid="baseSelect"/>
         and affiliation_id = #{value,jdbcType=NUMERIC}
    </select>

    <select id="getByMap" resultMap="result">
        <include refid="baseSelect"/>
        <include refid="filters"/>
    </select>

</mapper>

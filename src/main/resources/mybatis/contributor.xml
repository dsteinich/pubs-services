<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="contributor">

    <resultMap id="result" type="Contributor" extends="base.result">
        <id property="id" column="contributor_id"/>
        <result property="first" column="first"/>
        <result property="given" column="given"/>
        <result property="suffix" column="suffix"/>
        <result property="email" column="email"/>
        <association property="affiliation" column="cost_center_id" select="costCenter.getById"/>
    </resultMap>

    <sql id="cols">
        contributor_id, first, given, suffix, email, cost_center_id, literal
    </sql>

    <sql id="filters">
        <where>
            <if test="id != null">
                and contributor_id = #{id}
            </if>
            <if test="personName != null">
                and (upper(first) like upper(#{personName}) || '%'
                  or upper(given) like upper(#{personName}) || '%'
                  or upper(suffix) like upper(#{personName}) || '%'
                  or upper(email) like upper(#{personName}) || '%')
            </if>
            <if test="corporationName != null">
                and upper(literal) like upper(#{corporationName}) || '%'
            </if>
            <if test="category != null">
                <if test="category=='person'">
                    and literal is null
                </if>
                <if test="category=='corporation'">
                    and literal is not null
                </if>
            </if>
        </where>
    </sql>

    <sql id="baseSelect">
        select <include refid="cols"/>
          from contributor
    </sql>

    <select id="getById" parameterType="Integer" resultMap="result">
        <include refid="baseSelect"/>
         where contributor_id = #{value,jdbcType=NUMERIC}
    </select>

    <select id="getByMap" resultMap="result">
        <include refid="baseSelect"/>
        <include refid="filters"/>
    </select>

</mapper>

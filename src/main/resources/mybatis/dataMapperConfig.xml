<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- Global configuration settings for the mappper.-->
      <settings>
		<setting name="callSettersOnNulls" value="true"/>
        <setting name="cacheEnabled" value="false"/>
        <setting name="lazyLoadingEnabled" value="true"/>
        <setting name="aggressiveLazyLoading" value="true"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>


    <typeAliases>
        <typeAlias alias="baseDomain" type="gov.usgs.cida.pubs.domain.BaseDomain"/>
        <typeAlias alias="crossRefLog" type="gov.usgs.cida.pubs.domain.CrossRefLog"/>
        <typeAlias alias="pubMap" type="gov.usgs.cida.pubs.PubMap"/>

        <typeAlias alias="mpList" type="gov.usgs.cida.pubs.domain.mp.MpList"/>
        <typeAlias alias="mpListPublication" type="gov.usgs.cida.pubs.domain.mp.MpListPublication"/>
        <typeAlias alias="mpPublication" type="gov.usgs.cida.pubs.domain.mp.MpPublication"/>
        <typeAlias alias="mpPublicationContributor" type="gov.usgs.cida.pubs.domain.mp.MpPublicationContributor"/>
        <typeAlias alias="mpPublicationCostCenter" type="gov.usgs.cida.pubs.domain.mp.MpPublicationCostCenter"/>
        <typeAlias alias="mpPublicationLink" type="gov.usgs.cida.pubs.domain.mp.MpPublicationLink"/>

        <typeAlias alias="pwPublication" type="gov.usgs.cida.pubs.domain.pw.PwPublication"/>
        <typeAlias alias="pwPublicationContributor" type="gov.usgs.cida.pubs.domain.pw.PwPublicationContributor"/>
        <typeAlias alias="pwPublicationCostCenter" type="gov.usgs.cida.pubs.domain.pw.PwPublicationCostCenter"/>
        <typeAlias alias="pwPublicationLink" type="gov.usgs.cida.pubs.domain.pw.PwPublicationLink"/>

        <typeAlias alias="affiliation" type="gov.usgs.cida.pubs.domain.Affiliation"/>
        <typeAlias alias="contributor" type="gov.usgs.cida.pubs.domain.Contributor"/>
        <typeAlias alias="contributorType" type="gov.usgs.cida.pubs.domain.ContributorType"/>
        <typeAlias alias="corporateContributor" type="gov.usgs.cida.pubs.domain.CorporateContributor"/>
        <typeAlias alias="costCenter" type="gov.usgs.cida.pubs.domain.CostCenter"/>
        <typeAlias alias="linkFileType" type="gov.usgs.cida.pubs.domain.LinkFileType"/>
        <typeAlias alias="linkType" type="gov.usgs.cida.pubs.domain.LinkType"/>
        <typeAlias alias="outsideAffiliation" type="gov.usgs.cida.pubs.domain.OutsideAffiliation"/>
        <typeAlias alias="outsideContributor" type="gov.usgs.cida.pubs.domain.OutsideContributor"/>
        <typeAlias alias="personContributor" type="gov.usgs.cida.pubs.domain.PersonContributor"/>
        <typeAlias alias="publication" type="gov.usgs.cida.pubs.domain.Publication"/>
        <typeAlias alias="publicationContributor" type="gov.usgs.cida.pubs.domain.PublicationContributor"/>
        <typeAlias alias="publicationCostCenter" type="gov.usgs.cida.pubs.domain.PublicationCostCenter"/>
        <typeAlias alias="publicationIndex" type="gov.usgs.cida.pubs.domain.PublicationIndex"/>
        <typeAlias alias="publicationInteraction" type="gov.usgs.cida.pubs.domain.PublicationInteraction"/>
        <typeAlias alias="publicationLink" type="gov.usgs.cida.pubs.domain.PublicationLink"/>
        <typeAlias alias="publicationSeries" type="gov.usgs.cida.pubs.domain.PublicationSeries"/>
        <typeAlias alias="publicationSubtype" type="gov.usgs.cida.pubs.domain.PublicationSubtype"/>
        <typeAlias alias="publicationType" type="gov.usgs.cida.pubs.domain.PublicationType"/>
        <typeAlias alias="publishingServiceCenter" type="gov.usgs.cida.pubs.domain.PublishingServiceCenter"/>
        <typeAlias alias="usgsContributor" type="gov.usgs.cida.pubs.domain.UsgsContributor"/>

        <typeAlias alias="ipdsMessageLog" type="gov.usgs.cida.pubs.domain.ipds.IpdsMessageLog"/>
        <typeAlias alias="ipdsProcessLog" type="gov.usgs.cida.pubs.domain.ipds.IpdsProcessLog"/>
        <typeAlias alias="ipdsPubTypeConv" type="gov.usgs.cida.pubs.domain.ipds.IpdsPubTypeConv"/>

    </typeAliases>

    <typeHandlers>
        <typeHandler javaType="java.time.LocalDate" handler="gov.usgs.cida.pubs.dao.typehandler.LocalDateTypeHandler"/>
        <typeHandler javaType="java.time.LocalDateTime" handler="gov.usgs.cida.pubs.dao.typehandler.LocalDateTimeTypeHandler"/>
        <typeHandler javaType="java.lang.Boolean" handler="gov.usgs.cida.pubs.dao.typehandler.StringBooleanTypeHandler"/>
        <typeHandler javaType="PubMap" handler="gov.usgs.cida.pubs.dao.typehandler.PubMapTypeHandler"/>
        <typeHandler javaType="gov.usgs.cida.pubs.domain.Predicate" handler="org.apache.ibatis.type.EnumOrdinalTypeHandler"/>
    </typeHandlers>

</configuration>
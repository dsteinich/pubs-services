<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- Global configuration settings for the mappper.-->
      <settings>
        <setting name="cacheEnabled" value="false"/>
        <setting name="lazyLoadingEnabled" value="false"/>
        <setting name="aggressiveLazyLoading" value="false"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>


    <typeAliases>
        <typeAlias alias="baseDomain" type="gov.usgs.cida.pubs.domain.BaseDomain"/>

        <typeAlias alias="mpPublication" type="gov.usgs.cida.pubs.domain.mp.MpPublication"/>
        <typeAlias alias="mpPublicationContributor" type="gov.usgs.cida.pubs.domain.mp.MpPublicationContributor"/>
        <typeAlias alias="mpPublicationCostCenter" type="gov.usgs.cida.pubs.domain.mp.MpPublicationCostCenter"/>

        <typeAlias alias="pwPublication" type="gov.usgs.cida.pubs.domain.pw.PwPublication"/>

        <typeAlias alias="contact" type="gov.usgs.cida.pubs.domain.Contact"/>
        <typeAlias alias="contributor" type="gov.usgs.cida.pubs.domain.Contributor"/>
        <typeAlias alias="contributorType" type="gov.usgs.cida.pubs.domain.ContributorType"/>
        <typeAlias alias="costCenter" type="gov.usgs.cida.pubs.domain.CostCenter"/>
        <typeAlias alias="publication" type="gov.usgs.cida.pubs.domain.Publication"/>
        <typeAlias alias="publicationContributor" type="gov.usgs.cida.pubs.domain.PublicationContributor"/>
        <typeAlias alias="publicationCostCenter" type="gov.usgs.cida.pubs.domain.PublicationCostCenter"/>
        <typeAlias alias="publicationSeries" type="gov.usgs.cida.pubs.domain.PublicationSeries"/>
        <typeAlias alias="publicationSubtype" type="gov.usgs.cida.pubs.domain.PublicationSubtype"/>
        <typeAlias alias="publicationType" type="gov.usgs.cida.pubs.domain.PublicationType"/>

        <typeAlias alias="ipdsMessageLog" type="gov.usgs.cida.pubs.domain.ipds.IpdsMessageLog"/>
        <typeAlias alias="ipdsProcessLog" type="gov.usgs.cida.pubs.domain.ipds.IpdsProcessLog"/>

    </typeAliases>

    <typeHandlers>
        <typeHandler javaType="org.joda.time.LocalDate" handler="gov.usgs.cida.pubs.dao.typehandler.LocalDateTypeHandler"/>
        <typeHandler javaType="org.joda.time.LocalDateTime" handler="gov.usgs.cida.pubs.dao.typehandler.LocalDateTimeTypeHandler"/>
    </typeHandlers>

    <mappers>
        <!-- Individual sql map file resources. Each one has its own namespace and sql. -->
         <mapper resource="mybatis/baseDao.xml"/>

         <mapper resource="mybatis/mpPublication.xml"/>
         <mapper resource="mybatis/mpPublicationContributor.xml"/>
         <mapper resource="mybatis/mpPublicationCostCenter.xml"/>

         <mapper resource="mybatis/pwPublication.xml"/>

         <mapper resource="mybatis/costCenter.xml"/>
         <mapper resource="mybatis/contributor.xml"/>
         <mapper resource="mybatis/contributorType.xml"/>
         <mapper resource="mybatis/publication.xml"/>
         <mapper resource="mybatis/publicationContributor.xml"/>
         <mapper resource="mybatis/publicationCostCenter.xml"/>
         <mapper resource="mybatis/publicationSeries.xml"/>
         <mapper resource="mybatis/publicationSubtype.xml"/>
         <mapper resource="mybatis/publicationType.xml"/>

         <mapper resource="mybatis/ipdsMessageLog.xml"/>
         <mapper resource="mybatis/ipdsProcessLog.xml"/>
    </mappers>

</configuration>

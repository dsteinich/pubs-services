<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- Global configuration settings for the mapper.-->
      <settings>
        <setting name="cacheEnabled" value="false"/>
        <setting name="lazyLoadingEnabled" value="false"/>
        <setting name="aggressiveLazyLoading" value="false"/>
    </settings>


    <typeAliases>
        <typeAlias alias="baseDomain" type="gov.usgs.cida.pubs.domain.BaseDomain"/>
        <typeAlias alias="publicationSeries" type="gov.usgs.cida.pubs.domain.PublicationSeries"/>
        <typeAlias alias="publicationSubtype" type="gov.usgs.cida.pubs.domain.PublicationSubtype"/>
        <typeAlias alias="publicationType" type="gov.usgs.cida.pubs.domain.PublicationType"/>
    </typeAliases>

    <mappers>
        <!-- Individual sql map file resources. Each one has its own namespace and sql. -->
         <mapper resource="mybatis/baseDao.xml"/>
         <mapper resource="mybatis/publicationSeries.xml"/>
         <mapper resource="mybatis/publicationSubtype.xml"/>
         <mapper resource="mybatis/publicationType.xml"/>
    </mappers>

</configuration>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="publicationType">

    <resultMap id="publicationTypeResult" type="PublicationType" extends="base.baseResult">
        <id property="id" column="publication_type_id"/>
        <result property="name" column="publication_type_name"/>
    </resultMap>

    <sql id="publicationTypeCols">
        publication_type_id, publication_type_name
    </sql>

    <sql id="findPublicationTypeFilters">
        <where>
            <if test="id != null">
                and publication_type_id = #{id}
            </if>
            <if test="name != null">
                and upper(publication_type_name) like upper(#{name}) || '%'
            </if>
        </where>
    </sql>

    <sql id="basePublicationTypeSelect">
        select <include refid="publicationTypeCols"/>
          from publication_type
    </sql>

    <select id="getById" parameterType="Integer" resultMap="publicationTypeResult">
        <include refid="basePublicationTypeSelect"/> 
         where publication_type_id = #{value,jdbcType=NUMERIC}
    </select>

    <select id="getAll" resultMap="publicationTypeResult">
        <include refid="basePublicationTypeSelect"/> 
        <include refid="findPublicationTypeFilters"/> 
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:database_init.properties</value>
            </list>
        </property>
    </bean>

    <bean id="mypubsDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
        <property name="url" value="${jdbc.mypubs.url}"/>
        <property name="username" value="${jdbc.mypubs.username}"/>
        <property name="password" value="${jdbc.mypubs.password}"/>
    </bean>

    <alias name="mypubsDataSource" alias="dataSource"/>

    <bean id="ipdsPubsWsPwd" class="java.lang.String">
        <constructor-arg value="${pubs.ipdsPubsWsPwd}"/>
    </bean>
    <bean id="ipdsPubsWsUser" class="java.lang.String">
        <constructor-arg value="${pubs.ipdsPubsWsUser}"/>
    </bean>

    <bean id="brokerURL" class="java.lang.String">
        <constructor-arg value="tcp://localhost:61616"/>
    </bean>
    <bean id="queueName" class="java.lang.String">
        <constructor-arg value="dummy"/>
    </bean>
    <bean id="costCenterQueueName" class="java.lang.String">
        <constructor-arg value="dummy"/>
    </bean>
    <bean id="mqBroker" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod" value="org.apache.activemq.broker.BrokerFactory.createBroker"/>
        <property name="arguments">
            <list><value>broker:(tcp://localhost:61616)?persistent=false&amp;useJmx=false</value></list>
        </property>
    </bean>

    <bean id="mqBrokerStart" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="org.apache.activemq.broker.BrokerService"/>
        <property name="targetMethod" value="start"/>
        <property name="targetObject" ref="mqBroker"/>
    </bean>

    <bean id="ipdsEndpoint" class="java.lang.String">
        <constructor-arg value="ipdsdev.usgs.gov"/>
    </bean>

    <bean id="crossRefProtocol" class="java.lang.String">
        <constructor-arg value="http"/>
    </bean>
    <bean id="crossRefHost" class="java.lang.String">
        <constructor-arg value="test.crossref.org"/>
    </bean>
    <bean id="crossRefUrl" class="java.lang.String">
        <constructor-arg value="/servlet/deposit"/>
    </bean>
    <bean id="crossRefPort" class="java.lang.Integer">
        <constructor-arg value="80"/>
    </bean>
    <bean id="crossRefUser" class="java.lang.String">
        <constructor-arg value="${crossref.username}"/>
    </bean>
    <bean id="crossRefPwd" class="java.lang.String">
        <constructor-arg value="${crossref.password}"/>
    </bean>

    <bean id="pubsEmailList" class="java.lang.String">
        <constructor-arg value="drsteini@usgs.gov"/>
    </bean>
    <bean id="mailHost" class="java.lang.String">
        <constructor-arg value="gsvaresh01.er.usgs.gov"/>
    </bean>

    <bean id="authService" class="java.lang.String">
        <constructor-arg value="localhost"/>
    </bean>

    <bean id="lockTimeoutHours" class="java.lang.Integer">
        <constructor-arg value="3"/>
    </bean>

</beans>

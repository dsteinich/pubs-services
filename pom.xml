<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>gov.usgs.cida</groupId>
	<artifactId>pubs-services</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>

	<properties>
		<activemq-version>5.7.0</activemq-version>
		<cida.maven.url>http://internal.cida.usgs.gov/maven</cida.maven.url>
		<httpcomponents-version>4.3.5</httpcomponents-version>
		<jackson-version>2.4.1.3</jackson-version>
		<joda-time-version>2.4</joda-time-version>
		<junit-version>4.11</junit-version>
		<maven-compiler-plugin-version>2.3.2</maven-compiler-plugin-version>
		<maven-exec-plugin-version>1.2</maven-exec-plugin-version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<servlet-version>3.0.1</servlet-version>
		<slf4j-version>1.7.7</slf4j-version>
		<spring-security-version>3.2.4.RELEASE</spring-security-version>
		<spring-version>4.0.5.RELEASE</spring-version>
		<mybatis-spring-version>1.2.2</mybatis-spring-version>
		<mybatis-version>3.2.3</mybatis-version>
	</properties>

	<scm>
		<developerConnection>scm:svn:https://cida-svn.er.usgs.gov/repos/dev/usgs/pubs/pubsCore/trunk</developerConnection>
	</scm>

	<distributionManagement>
		<repository>
			<id>cida-releases</id>
			<name>CIDA Releases</name>
			<url>${cida.maven.url}/content/repositories/cida-releases</url>
		</repository>
		<snapshotRepository>
			<id>cida-snapshots</id>
			<name>CIDA Snapshots</name>
			<url>${cida.maven.url}/content/repositories/cida-snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>nexus</id>
			<name>CIDA Nexus</name>
			<url>${cida.maven.url}/content/groups/public/</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>plugin-nexus</id>
			<name>CIDA Plugin repo</name>
			<url>${cida.maven.url}/content/groups/public/</url>
		</pluginRepository>
	</pluginRepositories>

	<dependencies>

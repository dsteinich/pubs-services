<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="publicationSeries">

    <resultMap id="publicationSeriesResult" type="PublicationSeries" extends="base.baseResult">
        <id property="id" column="publication_series_id"/>
        <result property="publicationSubtype.id" column="publication_subtype_id"/>
        <result property="name" column="publication_series_name"/>
        <result property="code" column="publication_series_code"/>
        <result property="doiName" column="doi_name"/>
        <result property="printIssn" column="print_issn"/>
        <result property="onlineIssn" column="online_issn"/>
    </resultMap>

    <sql id="publicationSeriesCols">
        publication_series_id, publication_subtype_id, publication_series_name, publication_series_code, doi_name, print_issn, online_issn
    </sql>

    <sql id="findPublicationSeriesFilters">
        <where>
            <if test="id != null">
                and publication_series_id = #{id}
            </if>
            <if test="publicationSubtypeId != null">
                and publication_subtype_id = #{publicationSubtypeId}
            </if>
            <if test="code != null">
                and publication_series_code = #{code}
            </if>
            <if test="name != null">
                and upper(publication_series_name) like upper(#{name}) || '%'
            </if>
         </where>
    </sql>

    <sql id="basePublicationSeriesSelect">
        select <include refid="publicationSeriesCols"/>
          from publication_series
    </sql>

    <select id="getById" parameterType="Integer" resultMap="publicationSeriesResult">
        <include refid="basePublicationSeriesSelect"/> 
         where publication_series_id = #{value,jdbcType=NUMERIC}
    </select>

    <select id="getByMap" parameterType="map" resultMap="publicationSeriesResult">
        <include refid="basePublicationSeriesSelect"/> 
        <include refid="findPublicationSeriesFilters"/> 
    </select>

</mapper>

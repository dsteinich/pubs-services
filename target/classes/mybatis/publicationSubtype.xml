<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="publicationSubtype">

    <resultMap id="publicationSubtypeResult" type="PublicationSubtype" extends="base.baseResult">
        <id property="id" column="publication_subtype_id"/>
        <result property="publicationType.id" column="publication_type_id"/>
        <result property="name" column="publication_subtype_name"/>
    </resultMap>

    <sql id="publicationSubtypeCols">
        publication_subtype_id, publication_type_id, publication_subtype_name
    </sql>

    <sql id="findPublicationSubtypeFilters">
        <where>
            <if test="id != null">
                and publication_subtype_id = #{id}
            </if>
            <if test="publicationTypeId != null">
                and publication_type_id = #{publicationTypeId}
            </if>
            <if test="name != null">
                and upper(publication_subtype_name) like upper(#{name}) || '%'
            </if>
        </where>
    </sql>

    <sql id="basePublicationSubtypeSelect">
        select <include refid="publicationSubtypeCols"/>
          from publication_subtype
    </sql>

    <select id="getById" parameterType="Integer" resultMap="publicationSubtypeResult">
        <include refid="basePublicationSubtypeSelect"/> 
         where publication_subtype_id = #{value,jdbcType=NUMERIC}
    </select>

    <select id="getByMap" parameterType="map" resultMap="publicationSubtypeResult">
        <include refid="basePublicationSubtypeSelect"/> 
        <include refid="findPublicationSubtypeFilters"/> 
    </select>

</mapper>
